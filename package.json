{
  "name": "nodeclub-koa",
  "version": "0.0.1",
  "description": "A node.js bbs using Redis, Mongodb, koa",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "npm run test-local",
    "test-local": "standard && mocha ./test/* --require intelli-espower-loader --timeout 10000",
    "test-cov": "standard && istanbul cover _mocha -- ./test/* --require intelli-espower-loader --timeout 10000"
  },
  "standard": {
    "ignore": [
      "/app/public",
      "/test",
      "/app/middleware/art-template"
    ],
    "global": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "before",
      "after"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.0",
    "busboy": "^0.2.14",
    "bytes": "^2.5.0",
    "colors": "^1.1.2",
    "config-lite": "^1.5.0",
    "data2xml": "^1.2.5",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-csrf": "^3.0.5",
    "koa-helmet": "^3.1.0",
    "koa-mount": "^3.0.0",
    "koa-passport": "^3.0.0",
    "koa-router": "^7.1.1",
    "koa-session2": "^2.2.3",
    "less": "^2.7.2",
    "log4js": "^1.1.1",
    "markdown-it": "^8.3.1",
    "moment": "^2.18.1",
    "mongoose": "^4.9.2",
    "multiline": "^1.0.2",
    "nodemailer": "^4.0.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport-github": "^1.1.0",
    "redis": "^2.7.1",
    "resolve-path": "^1.3.3",
    "uuid": "^3.0.1",
    "validator": "^7.0.0",
    "xmlbuilder": "^9.0.0",
    "xss": "^0.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiedacon/nodeclub-koa.git"
  },
  "author": "xiedacon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xiedacon/nodeclub-koa/issues"
  },
  "homepage": "https://github.com/xiedacon/nodeclub-koa#readme",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "intelli-espower-loader": "^1.0.1",
    "istanbul": "^1.0.0-alpha.2",
    "mm": "^2.1.0",
    "mocha": "^3.3.0",
    "power-assert": "^1.4.2",
    "rewire": "^2.5.2",
    "standard": "^10.0.2",
    "supertest": "^3.0.0"
  }
}
